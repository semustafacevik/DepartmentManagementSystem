@model DepartmentManagementSystem.ViewModels.PersonnelFormViewModels
@{
    ViewBag.Title = "PersonnelForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Save", "Personnel", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.personnel.p_Name)
        @Html.TextBoxFor(m => m.personnel.p_Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.personnel.p_Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.personnel.departmentID)
        @Html.DropDownListFor(m => m.personnel.departmentID, new SelectList(Model.departments, "d_ID", "d_Name"), "Select Departman", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.personnel.departmentID)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.personnel.p_Salary)
        @Html.TextBoxFor(m => m.personnel.p_Salary, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.personnel.p_Salary)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.personnel.p_Birthdate)
        @Html.TextBoxFor(m => m.personnel.p_Birthdate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.personnel.p_Birthdate)
    </div>

    <div class="form-group">
        <div class="radio">
            <label>
                @Html.RadioButtonFor(m => m.personnel.p_Sex, true)Female
            </label>
            <label>
                @Html.RadioButtonFor(m => m.personnel.p_Sex, false)Male
            </label>
        </div>
        @Html.ValidationMessageFor(m => m.personnel.p_Sex)
    </div>
        @Html.HiddenFor(m=>m.personnel.p_ID)
        <button type="submit" class="btn btn-success btn-lg btn-block">Save</button>
}