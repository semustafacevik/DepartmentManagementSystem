@model DepartmentManagementSystem.ViewModels.PersonnelFormViewModels
@{
    ViewBag.Title = "DMS Personnel Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Save", "Personnel", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m._Personnel.p_Name)
        @Html.TextBoxFor(m => m._Personnel.p_Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m._Personnel.p_Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m._Personnel.departmentID)
        @Html.DropDownListFor(m => m._Personnel.departmentID, new SelectList(Model._Departments, "d_ID", "d_Name"), "Select Departman", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m._Personnel.departmentID)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m._Personnel.p_Salary)
        @Html.TextBoxFor(m => m._Personnel.p_Salary, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m._Personnel.p_Salary)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m._Personnel.p_Birthdate)
        @Html.TextBoxFor(m => m._Personnel.p_Birthdate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", onchange = "CheckDateTypeIsValid(this)" })
        @Html.ValidationMessageFor(m => m._Personnel.p_Birthdate)
    </div>

    <div class="form-group">
        <div class="radio">
            <label>
                @Html.RadioButtonFor(m => m._Personnel.p_Sex, true)Female
            </label>
            <label>
                @Html.RadioButtonFor(m => m._Personnel.p_Sex, false)Male
            </label>
        </div>
        @Html.ValidationMessageFor(m => m._Personnel.p_Sex)
    </div>
    @Html.HiddenFor(m => m._Personnel.p_ID)
    <button type="submit" class="btn btn-success btn-lg btn-block">Save</button>
}

@section scripts
    {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }
